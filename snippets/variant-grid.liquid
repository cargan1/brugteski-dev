<div class="grid-variant__wrapper variant-picker__option-values wrap gap-2">
  {% for variant in product.variants %}
    {% if variant.available %}
      <a href="{{ product.url }}?variant={{ variant.id }}">
        <div class="variant-button">
          <span>{{ variant.option1 }}</span>
        </div>
      </a>
    {% else %}
      <div class="variant-button is-disabled">
        <span>{{ variant.option1 }}</span>
      </div>
    {% endif %}
    {% if variant.option2 %}
      <a href="{{ product.url }}?variant={{ variant.id }}">
        <div class="variant-button">
          <span>{{ variant.option2 }}</span>
        </div>
      </a>
    {% else %}
      <div class="variant-button is-disabled">
        <span>{{ variant.option2 }}</span>
      </div>
    {% endif %}
  {% endfor %}
</div>