<style>
  {%- if section.settings.tab_label != blank -%}
    .section-{{ section.id}}{}

    .product-info__description {
      column-count: 2;
      column-gap: 70px;
    }
    @media screen and (max-width: 900px) {
      .section-{{ section.id}}{
        padding-top: 20px !important;
        padding-bottom: 20px !important;
      }
      .product-info__description {
        column-count: 1;
        column-gap: 0;
      }
    }
  {%- endif -%}
</style>
{% comment %} Product Tabs {% endcomment %}
{% assign tab_label = section.settings.tab_label | remove: " " | downcase %}

  {%- if section.settings.tab_label != blank -%}
  <div class="
                            section-{{section.id}}
                            tab tab-{{tab_label}}">{%- endif -%}
  <div class="section section--tight">
    <div class="product-info__description" {{ block.shopify_attributes }}>

      {{- product.description -}}

    </div>
  </div>
  <!--right after the closing section tag, close the tab container with a closing div tag -->
  {%- if section.settings.tab_label != blank -%}
  </div>
{%- endif -%}
{% schema %}
  {
    "name": "Produkt beskrivelse",
    "class": "shopify-section--product-desc",
    "tag": "section",
    "enabled_on": {
      "templates": ["product"]
    },
    "settings": [
      {
        "type": "header",
        "content": "Tabs"
      }, {
        "type": "text",
        "id": "tab_label",
        "label": "Tab label"
      }
    ],
    "presets": [
      {
        "name": "Produkt beskrivelse"
      }
    ]
  }
{% endschema %}