{% if section.settings.enable_tabs %}
  <section class="section section-{{section.id}}">
    <div class="tab_container">
      {% for block in section.blocks %}
        {% assign tab_label = block.settings.title | remove: " " | remove: "&" | downcase %}
        {% if forloop.index != 1 %}
          {% style %}
            .tab {
              display: none;
            }
          {% endstyle %}
        {% endif %}
        <div
          class="product_tabs"
          id="tab-{{tab_label}}"
          onClick="showHideTabs('tab-{{tab_label}}')">
          {{ block.settings.title }}
        </div>
      {% endfor %}
      {% for block in section.blocks %}
        {% assign tab_label = block.settings.title | remove: " " | remove: "&" | downcase %}
        {% if forloop.index == 1 %}
          {% style %}
            .tab-{{ tab_label }}{
              display: block;
              background: #f7f7f7;
            }
          {% endstyle %}
        {% endif %}
      {% endfor %}
    </div>
  </section>

  <script>

    function showHideTabs(arg) {
      let tabname = "." + arg;
      let tabs = document.querySelectorAll('.tab');
      for (let i = 0; i < tabs.length; i += 1) {
        tabs[i].style.display = 'none';
      }
      document.querySelector(tabname).style.display = 'block';
    }
  </script>

  {% style %}

    .section-{{ section.id}}{
      padding-bottom: 0 !important;
      margin-bottom: 0 !important;
    }

    .tab_container {
      margin: 20px auto 0;
      display: flex;
      padding-bottom: {{ section.settings.border_padding}}
      px;
    }


    .product_tabs {
      margin-right: 4px;
      padding: 10px 15px 8px;
      min-width: 130px;
      background: #f7f7f7;
      /* background: linear-gradient(0deg, rgba(61,151,255,1) 0%, rgba(0,62,255,1) 100%); */
      color: #000;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
      /* border: 1px solid #2751A7; */
      text-align: center;
      transition: all 0.5s;
      font-size: 16px;
      font-weight: 700;
    }

    .product_tabs:hover {
      cursor: pointer;
      background-color: #0336D4;
    }

    @media only screen and (max-width: 600px) {
      .tab_container {
        margin: 3px auto 0;
        display: block;
        padding-bottom: 30px;
        border-bottom: 10px;
      }
      .product_tabs {
        margin-top: 3px;
        margin-right: 2px;
        padding: 4px 10px 3px;
        min-width: 130px;
        background: rgb(61, 151, 255);
        background: linear-gradient(0deg, rgba(61,151,255,1) 0%, rgba(0,62,255,1) 100%);
        color: white;
        border-top-right-radius: 0;
        border-top-left-radius: 0;
        border: 1px solid #2751A7;
        text-align: center;
        font-weight: 700;
        font-family: var(--heading-font-family);
        text-transform: uppercase;
      }
    }
  {% endstyle %}

{% endif %}


